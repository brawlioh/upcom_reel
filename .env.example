# Example environment variables for local development
# Copy to .env and fill in your real values

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Backend server
API_HOST=localhost
API_PORT=8000

# Frontend -> Backend URLs (used by Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Required API Keys
OPENAI_API_KEY=your_openai_key_here
HEYGEN_API_KEY=your_heygen_key_here
VIZARD_API_KEY=your_vizard_key_here
CREATOMATE_API_KEY=your_creatomate_key_here

# Optional Cloudinary (recommended for hosting generated assets)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Optional Steam API key (some flows fall back to mock data if omitted)
STEAM_API_KEY=your_steam_api_key_here
